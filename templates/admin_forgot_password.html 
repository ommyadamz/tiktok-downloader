<body>
    <div class="container">
        <div class="icon">üîë</div>
        <h1>Forgot Password?</h1>
        <p class="subtitle">No worries! Enter your username and we'll send you a reset link to your registered email.</p>

        <div class="message" id="message"></div>

        <div class="info-box">
            üí° <strong>Tip:</strong> Check your spam folder if you don't receive the email within a few minutes.
        </div>

        <form id="forgotPasswordForm">
            <div class="form-group">
                <label for="username">Username</label>
                <input
                    type="text"
                    id="username"
                    name="username"
                    required
                    placeholder="Enter your admin username"
                    autocomplete="username"
                >
            </div>

            <button type="submit" class="submit-btn" id="submitBtn">
                üìß Send Reset Link
            </button>

            <div class="loading" id="loading">
                <div class="spinner"></div>
                <p style="margin-top: 10px; color: #666;">Sending email...</p>
            </div>
        </form>

        <div class="back-link">
            <a href="/admin-Nembotech/login">‚Üê Back to Login</a>
        </div>
    </div>

    <script>
        const form = document.getElementById('forgotPasswordForm');
        const submitBtn = document.getElementById('submitBtn');
        const loading = document.getElementById('loading');
        const messageDiv = document.getElementById('message');

        form.addEventListener('submit', async (e) => {
            e.preventDefault();

            const username = document.getElementById('username').value.trim();

            if (!username) {
                showMessage('Please enter your username', 'error');
                return;
            }

            // Show loading
            submitBtn.style.display = 'none';
            loading.style.display = 'block';
            messageDiv.style.display = 'none';

            try {
                const response = await fetch('/api/admin/forgot-password', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ username })
                });

                const data = await response.json();

                if (data.success) {
                    showMessage(data.message, 'success');
                    form.reset();

                    // Redirect to login after 5 seconds
                    setTimeout(() => {
                        window.location.href = '/admin-Nembotech/login';
                    }, 5000);
                } else {
                    showMessage(data.message || 'Failed to send reset link', 'error');
                }
            } catch (error) {
                showMessage('Network error. Please try again.', 'error');
                console.error('Error:', error);
            } finally {
                submitBtn.style.display = 'block';
                loading.style.display = 'none';
            }
        });

        function showMessage(text, type) {
            messageDiv.textContent = text;
            messageDiv.className = `message ${type}`;
            messageDiv.style.display = 'block';
        }
    </script>
</body>
